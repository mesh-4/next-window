{
	"compilerOptions": {
		"strict": true,
		"module": "esnext",
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"jsx": "preserve"
	},
	"exclude": ["**/node_modules", "**/dist", "**/.next", "./client"]
}
